# Environment Variables for Faiz Lab
# Copy this file to .env and fill in your values

# ==========================================
# Backend (Job Scraper)
# ==========================================

# Database connection string
# For SQLite (development):
DATABASE_URL=sqlite:///./data/jobs.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@host:5432/database

# Scraper configuration
SCRAPE_INTERVAL_HOURS=1

# CORS origins (comma-separated, no spaces)
# Development:
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# Production:
# CORS_ORIGINS=https://faiz-lab.vercel.app/tools/automatic-job-alerts

# ==========================================
# Frontend (Next.js)
# ==========================================

# Backend API URL
# Development:
NEXT_PUBLIC_API_URL=http://localhost:8001
# Production:
# NEXT_PUBLIC_API_URL=https://faiz-lab-production.up.railway.app/

# ==========================================
# Optional: Production Secrets
# ==========================================

# VPS Deployment (for GitHub Actions)
# VPS_HOST=your-server-ip
# VPS_USERNAME=deploy
# VPS_SSH_KEY=your-private-key

# Vercel Deployment (for GitHub Actions)
# VERCEL_TOKEN=your-vercel-token
# VERCEL_ORG_ID=your-org-id
# VERCEL_PROJECT_ID=your-project-id

# Railway Deployment (for GitHub Actions)
# RAILWAY_TOKEN=your-railway-token

